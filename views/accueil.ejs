<%-include('header')%>

<div>
  
<script>

document.addEventListener('DOMContentLoaded', function() {
  console.log(Date.now);
    var calendarEl = document.getElementById('calendar');
  
    let planning = "<% index_p.forEach(function(user){ %><%= user.titre %>,<%= user.date %>,<%= user.heure_debut %><% }) %>";
    let tab_planning = planning.split(',');

    var today = new Date();
    var date = today.getFullYear()+'-'+(today.getMonth()+1)+'-'+today.getDate();
    //console.log(tab_planning);

    var calendar = new FullCalendar.Calendar(calendarEl, {
      initialView: 'timeGridDay',
      initialDate: date,
      locale: 'fr',
      
      events: [

        {
          title: tab_planning[0],
          start: tab_planning[1]+'T'+tab_planning[2]
        },

      ]
    });
  
    calendar.render();
  });</script>
  </div>

